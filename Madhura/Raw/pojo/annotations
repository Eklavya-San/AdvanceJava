
@Entity  //class level annotation tell hibernate, following class in an entity whose life cycle is to be managed !
@Table (name="users_tbl")
@Id //primary key constraints
@GeneratedValue //auto ID generation -- by default uses the strategy : auto --typically usees a table :hibernate_seq 
@GeneratedValue(strategy=GenerationType.IDENTITY) // EXTRA constrain : auto_increment works best with the mysql
@Coloumn (name="user_id")//don't give - as seprater user _ 
@Coloumn(name="first_name",length=20)
@Coloumn(name="last_name",length=20)
@Coloumn(name="email",length=30,unique=true)//unique constraints
@Coloumn(name="password",length=20,nullable=false)
@Transient // skip from persistent : no coloumn generation 
@Enumerated (Enum.Type.STRING)//coloum varchar enum constant
@Coloumn(name="user_role",length=20)
@Lob(name="",length=20)//coloumn type will be longblob for mysql


